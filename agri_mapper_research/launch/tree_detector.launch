<?xml version="1.0"?>
<launch>
  <arg name="show_output_images" default="false"/>

  <node name="tree_detector" pkg="agri_mapper_research" type="tree_detector" output="screen" ns="agri_mapper">
    <rosparam command="load" file="$(find agri_mapper_research)/config/tree_detector.yaml"/>
  </node>

  <group if="$(arg show_output_images)">
    <node name="image_view" pkg="image_view" type="image_view" ns="agri_mapper">
      <param name="window_name" value="Image"/>
    </node>
    <node name="circles_image_view" pkg="image_view" type="image_view" ns="agri_mapper">
      <remap from="image" to="detection_image"/>
      <param name="window_name" value="Detected"/>
    </node>
  </group>
</launch>
