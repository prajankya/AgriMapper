<?xml version="1.0"?>
<robot name="agri_mapper" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="wheel_center_dist" value="0.31"/>
    <xacro:property name="M_PI" value="3.1415926535897931"/>
    <xacro:property name="ground_clearance" value="0.14"/>

    <link name="base_link"/>

    <link name="chassis_link">
        <visual>
            <origin xyz="0.4 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.9 .5 .1"/>
            </geometry>
            <material name="white">
                <color rgba="1 1 1 0.3"/>
            </material>
        </visual>
    </link>

    <joint name="chassis_joint" type="fixed">
        <origin xyz="0 0 ${ground_clearance}" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="chassis_link"/>
    </joint>

    <link name="wheel_l">
        <visual>
            <origin xyz="0 0.304 0" rpy="${M_PI/2} 0 0"/>
            <geometry>
                <cylinder length="0.05" radius=".14"/>
            </geometry>
            <material name="wheel">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <visual>
            <origin xyz="0 0.264 0" rpy="${M_PI/2} 0 0"/>
            <geometry>
                <cylinder length="0.03" radius=".04"/>
            </geometry>
            <material name="wheel"/>
        </visual>
    </link>

    <joint name="chassis_wheel_l" type="continuous">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <parent link="chassis_link"/>
        <child link="wheel_l"/>
    </joint>

    <link name="wheel_r">
        <visual>
            <origin xyz="0 -0.304 0" rpy="${-M_PI/2} 0 0"/>
            <geometry>
                <cylinder length="0.05" radius=".14"/>
            </geometry>
            <material name="wheel"/>
        </visual>
        <visual>
            <origin xyz="0 -0.264 0" rpy="${-M_PI/2} 0 0"/>
            <geometry>
                <cylinder length="0.03" radius=".04"/>
            </geometry>
            <material name="wheel"/>
        </visual>
    </link>

    <joint name="chassis_wheel_r" type="continuous">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <parent link="chassis_link"/>
        <child link="wheel_r"/>
    </joint>

</robot>
